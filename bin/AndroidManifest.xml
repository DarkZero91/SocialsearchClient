<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.hanze.socialsearchclient"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET"/>
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="nl.hanze.socialsearchclient.FormActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="nl.hanze.socialsearchclient.SourceListActivity"
            android:label="@string/title_source_list" >
        </activity>
        <activity
            android:name="nl.hanze.socialsearchclient.SourceDetailActivity"
            android:label="@string/title_source_detail"
            android:parentActivityName=".SourceListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SourceListActivity" />
        </activity>
    </application>

</manifest>
